<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
    <variable
        name="myGirlsAdaptorViewModel"
        type="com.example.umbra.allApps.HW09.MyGirlsAdaptorViewModel"/>


    </data>
<RelativeLayout
    android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgGirl"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
       android:src="@{myGirlsAdaptorViewModel.url}"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtGirl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{myGirlsAdaptorViewModel.name}"
        android:layout_below="@+id/imgGirl"
        android:layout_alignLeft="@+id/imgGirl"
        android:layout_alignStart="@+id/imgGirl"
        android:layout_alignRight="@+id/imgGirl"
        android:layout_alignEnd="@+id/imgGirl" />


</RelativeLayout>
</layout>